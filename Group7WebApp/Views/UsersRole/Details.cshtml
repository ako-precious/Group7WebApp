@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Role Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" conatiner  m-auto p-4 ">
  
        <div class="border p-3 mt-4">
            <div class="row">
            <h2 class="text-white">@(ViewBag.RoleName) Role Details</h2>
            </div>
            <hr />
            <div class="group">
            <table class="table">
                <thead>
                    <tr>

                        <th>
                           First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone Number
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.usersInRole)
                    {
                        <tr>
                            <td>
                                @(item.FirtName)
                            </td>
                            <td>
                                @(item.LastName)
                            </td>
                            <td>
                                @(item.Email)
                            </td>
                            <td>
                                @(item.PhoneNumber)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

           
            <a asp-controller="UsersRole" asp-action="Index" class="mt-3  btn btn-outline-secondary">Back to list</a>
        </div>
    
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}