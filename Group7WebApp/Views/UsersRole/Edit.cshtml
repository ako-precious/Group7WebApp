@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = " Edit User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" conatiner  m-auto p-4 ">
    <form method="post" asp-action="Edit">
        <div class="border p-3 mt-4">
            <div class="row">
                <h2 class="text-white">Edit User Role</h2>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Name" class="form-label "></label>
                <input asp-for="Name" class="form-control" placeholder="Category Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="mt-3 btn  btn-primary">Update</button>
            <a asp-controller="UsersRole" asp-action="Index" class="mt-3  btn btn-outline-secondary">Back to list</a>
        </div>
    </form>
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}