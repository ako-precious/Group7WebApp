@model Category
 
<div class=" conatiner  m-auto p-4 ">
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-white">Create Category</h2>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="Name" class="form-label "></label>
            <input asp-for="Name" class="form-control" placeholder="Category Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group pt-2">
            <label asp-for="Code" class="form-label "></label>
            <input asp-for="Code" class="form-control" placeholder="Dsiplay Oder of Category ">
            <span asp-validation-for="Code" class="text-danger"></span>

        </div>
       

        <button type="submit" class="mt-3 btn  btn-primary">Create</button>
        <a asp-controller="Category" asp-action="Index" class="mt-3  btn btn-outline-secondary">Back to list</a>
    </div>
</form>
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}