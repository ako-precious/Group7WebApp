@model Group7WebApp.Areas.Identity.Data.WebAppUser

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" conatiner  m-auto p-4 ">
    <form method="post" asp-action="Delete">
        <div class="border p-3 mt-4">
            <div class="row">
                <h2 class="text-white">Delete User Role</h2>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="FirtName" class="form-label "></label>
                <input asp-for="Id" hidden class="form-control" readonly placeholder="Category Name">
                <input asp-for="FirtName" class="form-control" readonly placeholder="Category Name">
                <span asp-validation-for="FirtName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label "></label>
                <input asp-for="LastName" class="form-control" readonly placeholder="Category Name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Email" class="form-label "></label>
                <input asp-for="Email" class="form-control" readonly placeholder="Category Name">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="mt-3 btn  btn-primary">Delete</button>
            <a asp-controller="User" asp-action="Index" class="mt-3  btn btn-outline-secondary">Back to list</a>
        </div>
    </form>
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}